{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enablePreCommit",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)manifest\\.json$"
      ],
      "matchStrings": [
        "\"requirements\":\\s*\\[\\s*\"(?<depName>[^@=<>!\\s]+)(?<currentValue>[@=<>!\\s][^\",\\s]*)?\"\\s*\\]"
      ],
      "datasourceTemplate": "pypi"
    }
  ]
}