{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enablePreCommit"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "(^|/)manifest\\.json$"
      ],
      "matchStringsStrategy": "recursive",
      "matchStrings": [
        "\"requirements\":\\s*\\[(?<content>[\\s\\S]*?)\\]",
        "\"(?<depName>[^@=<>!~\\s]+)(?<currentValue>[@=<>!~][^\",\\s]*)?\""
      ],
      "datasourceTemplate": "pypi"
    }
  ]
}